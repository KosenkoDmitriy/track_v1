<%- cache(element) do -%>
  <%= element_view_for(element) do |el| -%>
    <% image = el.ingredient(:image) %>
    <% page_link = el.ingredient(:page_link) %>
    <% superheader = el.ingredient(:superheader) %>


    <div class="bg-color <%=el.render :background_color %>">
    <% if image %>
    <a href="<%= page_link %>">
      <%= image_tag show_alchemy_picture_path(image,  :format => (image.try(:suffix).to_s == 'png' ? 'png' : 'jpg')) %>
    </a>
    <% end %>
    <% if superheader %> 
    <a href="<%= page_link %>" class="superheader"><%= el.render :superheader %></a>
    <%end %>

      <h3 class="big-text"><%= el.render :text %></h3>

    </div>
  <%- end -%>
<%- end -%>

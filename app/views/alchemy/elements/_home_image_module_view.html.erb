<%- cache(element) do -%>
  <%= element_view_for(element) do |el| -%>
    <% image = el.essence(:image) %>
    <% page_link = el.ingredient(:page_link) %>
    <% superheader = el.ingredient(:superheader) %>
    <% title = el.ingredient(:image_title) %>

    <div class="bg-color <%=el.render :background_color %>">
    <% if image %>
    <a href="<%= page_link %>">
  
  <%= image_tag(image.picture_url(format: image.picture.try(:suffix).to_s == 'png' ? 'png' : 'jpg'), class: 'big-image')%>

    </a>
    <% end %>
    <div class="home-text <%= el.render :text_color %>">
      <% if superheader %> 
        <a href="<%= page_link %>" class="superheader  <%= el.render :text_color %>"><%= el.render :superheader %> </a>
      <%end %>

        <div class="big-text"><%= el.render :text %></div>
    </div>
    </div>
  <%- end -%>
<%- end -%>

<%= element_editor_for(element) do |el| -%>
  <%= el.edit :background_color, :select_values => ['purple', 'white', 'navy', 'crimson', 'gold', 'forest', 'olive'] %>
  <%= el.edit :headline %>
  <%= el.edit :text_above %>
  <div class="hint" style="position: relative; color: green; margin: 20px 0;">**Email Capture Input Are Inserted Here **</div>
  <%= el.edit :text_below %>
    <div class="hint" style="position: relative; color: green; margin: 20px 0;">**Social Icons Are Inserted Here **</div>
  <%= el.edit :text_color, :select_values => ['black', 'white', 'gold'] %>
  <%= el.edit :text_alignment, :select_values =>  ['top-left', 'top-center', 'top-right', 'center-left', 'center-center', 'center-right', 'bottom-left', 'bottom-center', 'bottom-right'] %>
  <%= el.edit :module_height %>
    <div class="hint" style="position: relative; top: -5px; color: green; margin-bottom: 10px;">&#8593; Please enter numeric value or leave blank for default</div>
  <%= el.edit :stamp_image %>
    <div class="hint" style="position: relative; top: -5px; color: green; margin-bottom: 10px;">&#8593; Google Analytics Unique Identifer </div>
  <%= el.edit :google_analytics_event_label %>
  <%= el.edit :mailchimp_list_id %>

<%- end -%>

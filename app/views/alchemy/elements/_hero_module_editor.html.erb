<%= element_editor_for(element) do |el| -%>
  <% if @page.page_layout == 'index' %>
  <%= el.edit :page_link %>
  <%end%>
  <%= el.edit :headline %>
  <%= el.edit :text_color, :select_values => ['black', 'white', 'gold'] %>
  <%= el.edit :background_color, :select_values => ['purple', 'white', 'navy', 'crimson', 'gold', 'forest', 'olive'] %>
  <%= el.edit :background_image %>
  <%= el.edit :mobile_image %>
  <%= el.edit :overlay? %>
  <%= el.edit :module_height %>
  <div class="hint" style="position: relative; top: -5px; color: green; margin-bottom: 10px;">&#8593; Please enter numeric value or leave blank for default</div>
  
  <section>
    <hr>
    <h1> SEO </h1>
    <%= el.edit :image_title %> 
  </section>
<%- end -%>
